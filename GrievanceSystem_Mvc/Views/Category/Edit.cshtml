@model GrievanceSystem_Mvc.ViewModels.EditCategoryViewModel


@{

	Layout = null;
}

<div class="row mt-5 pt-5 justify-content-center">
	<div class="col-md-8">

		@using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { id = "RegistrationForm" }))
		{
			@Html.AntiForgeryToken()

			<div class="form-horizontal">
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				@Html.HiddenFor(model => model.CategoryID)


				<div class="form-group">
					@Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md" })
					<div class="col-md mt-1">
						@Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-group">
					<p class="col-md mb-3 text-center mt-2">
						<input type="submit" value="Save Changes" class="btn btn-info shadow-none">
					</p>
				</div>
			</div>
		}

	</div>
</div>











