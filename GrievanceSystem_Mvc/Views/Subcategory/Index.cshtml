@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container card my-4 Subcategorycontainer">

	<div class="row p-3">
		<div class="col-md-12">

			<span class="h5 pt-1"><strong>Subcategories</strong></span>

			<a href="/Subcategory/Create" class="btn btn-outline-primary float-right shadow-none Subcategorypopup" id="addSubcategory" title="Add Subcategory">
				<span class="px-3 font-weight-bold">
					<i class="fa fa-plus"> </i> Add Subcategory
				</span>
			</a>
		</div>
	</div>

	<hr class="m-0" />
	<div class="row  p-4">
		<div class="col-md-12">
			<div class="form-group">
				@Html.Label("Category", htmlAttributes: new { @class = "control-label col-md" })
				<div class="col-md-5 p-0">
					@Html.DropDownList("Category", new SelectList(ViewBag.categories as System.Collections.IEnumerable, "CategoryID", "CategoryName"), new { id = "ddc_Category", @class = "form-control input-width" })
				</div>
			</div>
			<table class="table table-responsive table-sm table-striped table-bordered " id="SubcategoryTable" style="width:100%;">
				<thead>
					<tr>
						<th style="width:100%">
							Subcategory Name
						</th>
						<th class="" style=" max-width: 175px; width: 175px; min-width: 175px;">Actions</th>
					</tr>
				</thead>
			</table>
		</div>
	</div>

</div>
