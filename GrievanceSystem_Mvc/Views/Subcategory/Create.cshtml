@model GrievanceSystem_Mvc.ViewModels.NewSubcategoryViewModel
@{
	Layout = null;
}


<div class="row mt-5 pt-5 justify-content-center">
	<div class="col-md-8">
		@using (Html.BeginForm("Create", "Subcategory", FormMethod.Post, new { id = "RegistrationForm" }))
		{
			@Html.AntiForgeryToken()
			<div class="form-horizontal">

				@Html.ValidationSummary(true, "", new { @class = "text-danger" })

				<div class="form-group">
					@Html.Label("Category", htmlAttributes: new { @class = "control-label col-md" })
					<div class="col-md">
						@Html.DropDownListFor(m => m.Category_ID, new SelectList(ViewBag.categories as System.Collections.IEnumerable, "CategoryID", "CategoryName"), "--select category--", new { id = "Category", @class = "form-control input-width" })
						@Html.ValidationMessageFor(model => model.Category_ID, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.SubcategoryName, htmlAttributes: new { @class = "control-label col-md" })
					<div class="col-md">
						@Html.TextBoxFor(model => model.SubcategoryName, new { @class = "form-control" })
						@Html.ValidationMessageFor(model => model.SubcategoryName, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-group">
					<p class="col-md mb-3 text-center mt-2 ">
						<input type="submit" value="Add" class="btn btn-info mx-2 shadow-none ">
						<input type="reset" value="Reset" class="btn btn-secondary mx-2 shadow-none ">
					</p>
				</div>
			</div>
		}
	</div>
</div>
