@model GrievanceSystem_Mvc.ViewModels.NewCategoryViewModel

@{
	ViewBag.Title = "CreateCategory";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container card my-5 container-height">
	<div class="row p-3">
		<div class="col-md-12">

			<span class="h3">Category</span>
			<a href="@Url.Action("Index","Grievance") " class="btn btn-outline-dark  float-right">
				<span class="px-3 font-weight-bold">
					All Categories
				</span>
			</a>

		</div>
	</div>
	<hr />
	<div class="row p-4 justify-content-center">
		<div class="col-md-5">
			@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { id = "" }))
			{
				@Html.AntiForgeryToken()

				@Html.ValidationSummary(true, "", new { @class = "text-danger" })


				<div class="form-group">
					@Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md" })
					<div class="col-md">
						@Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control" })
						@Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
					</div>
				</div>


				<p class="col-md mb-3 text-center mt-4 ">
					<input type="submit" value="Add" class="btn btn-register shadow-none">
				</p>
			}
		</div>
	</div>
</div>












